@{
    ViewBag.Title = "Transferencias - Información de desviación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var Periodo = (IEnumerable<SelectListItem>)TempData["Periodo"];
    //var Valorizaciones = (IEnumerable<SelectListItem>)TempData["Valorizaciones"]; 
}
<link href="~/Areas/Transferencias/Content/Css/Transferencia.css" rel="stylesheet" />
<script src="~/Areas/Transferencias/Content/Scripts/infodesviacion.js"></script>

<div class="ast">
    <div class="form-title">
        <div class="content-titulo">Desviación en la Entrega / Retiro de la Información</div>
        <div class="content-botonera">
        </div>
    </div>

    <div class="content-hijo" style="padding-top:8px">
        <div class="content-busqueda" style="border-style: double; border-width: 1px; border-color: #2980B9; border-radius: 5px;">
            <table border="1" cellpadding="5" cellspacing="2">
                <tr class="THCabecera">
                    <td colspan="4"><div class="editor-label" style="color:#FFFFFF;"><b>Filtros de búsqueda</b></div></td>
                </tr>
                <tr>
                    <td><div class="editor-label">Periodo</div></td>
                    <td><div class="editor-field">@Html.DropDownList("Periodo", @Periodo, "--Seleccione--")</div></td>
                    <td><div class="editor-label">Porcentaje de Desviación [%]</div></td>
                    <td><div class="editor-field">@Html.TextBox("Desviacion", "0")</div></td>
                </tr>
                <tr>                    
                    <td><div class="editor-label">Nro. Valorizaciones pasadas</div></td>
                    <td><div class="editor-field">@Html.TextBox("Valorizaciones", "1")</div></td>
                    <td colspan="2"><div class="busqueda-item"><input type="button" id="btnBuscar" value="Buscar" /></div></td>
                </tr>
            </table>
        </div>

        <div class="listado" id="listado">

        </div>

    </div>


</div>

