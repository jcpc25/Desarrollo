                        <tr>
                            <td>EDEGEL</td>
                            <td>EDEGEL</td>
                        </tr>
                    </tbody>
                </table>

                <div style="clear:both; height:20px"></div>
                <table style="width:auto">
                    <tr style="line-height:20px">
                        <td>
                            Enviar correo electrónico a involucrados:
                        </td>
                        <td>
                            <input type="checkbox" />
                        </td>
                    </tr>
                </table>


            </td>
        </tr>

     </table>
       
  
